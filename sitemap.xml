---
layout: null
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- الصفحة الرئيسية -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- الصفحات الأساسية (باستخدام page.url لضمان الروابط الصحيحة) -->
  {% for p in site.pages %}
    {% if p.permalink == '/properties/' or p.permalink == '/requests/' %}
      <url>
        <loc>{{ site.url }}{{ p.url | relative_url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.9</priority>
      </url>
    {% endif %}
  {% endfor %}

  <!-- روابط العقارات الفردية -->
  {% for prop in site.properties %}
  <url>
    <loc>{{ site.url }}{{ prop.url | relative_url }}</loc>
    <lastmod>{{ prop.date | date_to_xmlschema | default: site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endfor %}

  <!-- روابط طلبات الشراء -->
  {% for req in site.requests %}
  <url>
    <loc>{{ site.url }}{{ req.url | relative_url }}</loc>
    <lastmod>{{ req.date | date_to_xmlschema | default: site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}

  <!-- باقي الصفحات الهامة (مثل "عنا" أو "اتصل بنا" إن وجدت) -->
  {% for page in site.pages %}
    {% if page.sitemap != false and page.url != '/' and page.permalink != '/properties/' and page.permalink != '/requests/' %}
      <url>
        <loc>{{ site.url }}{{ page.url | relative_url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
      </url>
    {% endif %}
  {% endfor %}
</urlset>
